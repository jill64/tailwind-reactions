{
  "name": "@jill64/tailwind-reactions",
  "version": "1.0.0",
  "description": "UI effect set for TailwindCSS",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "jill64 <intents.turrets0h@icloud.com> (https://github.com/jill64)",
  "bugs": "https://github.com/jill64/tailwind-reactions/issues",
  "homepage": "https://github.com/jill64/tailwind-reactions#readme",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jill64/tailwind-reactions.git"
  },
  "keywords": [
    "tailwindcss",
    "ui",
    "effect"
  ],
  "scripts": {
    "dev": "cd demo && npm run dev",
    "build": "npm run build:lib && npm run build:demo && npx publint",
    "build:lib": "tsc",
    "build:demo": "cd demo && npm run build",
    "preview": "npm run build:lib && cd demo && npm run preview",
    "test:e2e": "npx playwright install --with-deps && npx playwright test",
    "prepack": "npm run build",
    "format": "npm run format:lib && npm run format:demo",
    "format:lib": "npx prettier --write .",
    "format:demo": "cd demo && npm run format",
    "lint": "npm run lint:lib && npm run lint:demo",
    "lint:lib": "npx prettier --check . && npx eslint .",
    "lint:demo": "cd demo && npm run lint",
    "check": "cd packages/site && pnpm check"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint-plugin-deprecation": "2.0.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "tailwindcss": "3.3.3"
  }
}
